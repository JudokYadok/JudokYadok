    <div id="slideshow" style="width: 100%; height: fit-content; background-color: #FDBBBB;">
        <!-- 이미지 - 임시 설정 -->
        <div class="slide">
            <img style="width: 100%; height: fit-content;" src="/images/example1.jpg">
        </div>
        <div class="slide">
            <img style="width: 100%; height: fit-content;" src="/images/example2.jpg">
        </div>
        <!-- <div class="slide">
            <h2>세 번째 페이지</h2>
        </div> -->
    </div>

    <script>
        let currentSlide = 0;
        const slides = document.querySelectorAll('.slide');

        function showSlide(index) {
            slides.forEach(slide => slide.style.display = 'none');
            slides[index].style.display = 'block';
        }

        function nextSlide() {
            currentSlide = (currentSlide + 1) % slides.length;
            showSlide(currentSlide);
        }

        showSlide(currentSlide);
        setInterval(nextSlide, 3000);
    </script>
</body>

