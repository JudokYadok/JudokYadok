<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="NoElevation">
        <item name="android:elevation">0dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerCircle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/ico_kakao</item>
    </style>
    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/nanumsquareneo_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="NumberPickerStyle">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="NumberPickerSetting">
        <item name="android:textSize">50sp</item>
        <item name="android:layout_height">200dp</item>
    </style>
    <style name="TimePicker_Custom" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>
    <style name="AppTextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nanumsquareneo_bold</item>
    </style>
    <style name="MyItemFont" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nanumsquareneo_bold</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white_pink</item>
        <item name="colorPrimaryDark">@color/white_gray</item>
        <item name="colorAccent">@color/yellow_pink</item>

        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item> <!-- 텍스트 크기를 20sp로 설정 -->
    </style>

</resources>