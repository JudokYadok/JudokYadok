<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="140dp"
    android:layout_marginVertical="60dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/memo_list_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장일"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumsquareneo_bold"
        android:background="@drawable/lo_main"
        android:paddingVertical="10dp"
        android:paddingHorizontal="160dp"
        app:layout_constraintEnd_toStartOf="@id/memo_list_name_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/memo_list_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메모명"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumsquareneo_bold"
        android:background="@drawable/lo_main"
        android:paddingVertical="10dp"
        android:paddingHorizontal="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/memo_list_date_tv"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/memo_list_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="21dp"
        tools:listitem="@layout/item_memo_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/memo_list_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>