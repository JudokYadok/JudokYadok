<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/lo_main_white"
    android:paddingVertical="10dp"
    android:paddingHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/item_memo_list_del_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_main"
        android:backgroundTint="@color/gray"
        android:text="삭제"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/nanumsquareneo_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_memo_list_lo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_memo_list_del_btn">

        <TextView
            android:id="@+id/item_memo_list_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022-02-09"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nanumsquareneo_regular"
            android:layout_marginStart="110dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/item_memo_list_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22년 수능 중요 키워드 정리"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:fontFamily="@font/nanumsquareneo_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_memo_list_date_tv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>